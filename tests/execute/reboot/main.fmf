duration: 20m

/basic:
    summary: Verify that reboot during test works
    test: ./basic.sh


/multi-part:
    summary: Verify reboot during multiple consecutive tests
    test: ./multi-part.sh


/reuse_provision:
    summary: Verify that provision can be reused for reboot
    test: ./reuse.sh
    enabled: false

    adjust:
        enabled: true
        when: how == full
        because: this can be run only with full virtualization

/timeout:
    summary: Allow test to wait longer
    test: ./timeout.sh
    enabled: false

    adjust:
        enabled: true
        when: how == full
        because: this can be run only with full virtualization
