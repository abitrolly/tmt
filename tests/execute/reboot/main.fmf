duration: 20m

/basic:
    summary: Verify that reboot during test works
    test: ./basic.sh


/efi:
    summary: Verify that reboot on EUFI booted machine sets BootNext to BootCurrent
    test: ./efi.sh


/multi-part:
    summary: Verify reboot during multiple consecutive tests
    test: ./multi-part.sh


/shorten-timeout:
    summary: Verify that timeout shortening works
    test: ./shorten-timeout.sh
    enabled: false

    adjust:
        enabled: true
        when: how == full
        because: this can be run only with full virtualization


/reuse_provision:
    summary: Verify that provision can be reused for reboot
    test: ./reuse.sh
    enabled: false

    adjust:
        enabled: true
        when: how == full
        because: this can be run only with full virtualization
